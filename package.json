{
  "name": "formular",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": "git@github.com:formularx/formular.git",
  "author": "HeskeyBaozi <hezhiyu233@foxmail.com>",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:china": "lerna bootstrap --registry=https://registry.npm.taobao.org",
    "build": "yarn run build:core && yarn run build:react && yarn run build:antd",
    "build:react": "yarn workspace @formular/react run build",
    "build:core": "yarn workspace @formular/core run build",
    "build:antd": "yarn workspace @formular/antd run build",
    "lint": "yarn workspaces run lint",
    "type-check": "yarn workspaces run type-check",
    "example:react": "yarn workspace @formular/react run start",
    "example:antd": "yarn workspace @formular/antd run start",
    "test": "jest",
    "test:core": "jest packages/core",
    "site": "dumi dev",
    "site:build": "dumi build",
    "prepublish": "yarn run lint && yarn run test && yarn run build",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@rushstack/eslint-config": "^0.5.8",
    "@types/jest": "^25.2.3",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.memoize": "^4.1.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "@welldone-software/why-did-you-render": "^4.2.2",
    "antd": "^4.2.4",
    "babel-jest": "^26.0.1",
    "babel-preset-power-assert": "^3.0.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "dumi": "^1.0.26",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^26.0.1",
    "lerna": "^3.21.0",
    "mobx": "^5.15.4",
    "mobx-devtools-mst": "^0.9.22",
    "mobx-state-tree": "^3.16.0",
    "mst-middlewares": "^3.16.0",
