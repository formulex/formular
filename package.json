    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.3"
  },
  "resolutions": {
    "eslint": "^6.8.0"
